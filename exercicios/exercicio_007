#include <stdio.h>
#include <string.h>


int main ()
  {
//nome, cargo, salario atual, porcentagem de aumento, novo salario
// USUARIO informe a taxa do inss

    char nome_funcionario[50], cargo[50];
    float salario_atual, porcentagem, taxa, novo_salario, porcentagem_inss, inss, liquido;

    printf ("Informe o nome completo: ");
    gets (nome_funcionario);

    printf ("Informe seu cargo: ");
    gets (cargo);

    printf ("Informe o salario atual: ");
    scanf ("%f", &salario_atual);

    printf ("Informe a taxa de aumento: ");
    scanf ("%f", &taxa);
    
    printf ("Informe a taxa do INSS: ");
    scanf ("%f", &porcentagem_inss);

    porcentagem = (taxa * salario_atual) / 100;

    novo_salario = porcentagem + salario_atual;
    
    inss = (porcentagem_inss * novo_salario)/100;
    
    liquido =  novo_salario - inss;

    
    
   printf ("\n ****HOLERITH****"); 
   printf ("\n Nome do funcionario: %s",nome_funcionario); 
   printf ("\n Cargo do Funcionario: %s",cargo);
   printf ("\n Salario atual: %4.2f",salario_atual);
   printf ("\n Valor do aumento: %4.2f (%3.2f%)",porcentagem,taxa);
   printf ("\n Salario com o aumento: %4.2f",novo_salario);
   printf ("\n Taxa do INSS: %4.2f (%3.2f%)",inss,porcentagem_inss);
   printf ("\n Salario liquido: %4.2f",liquido);
   printf ("\n **********");
    
    return 0;
    
    
    

}