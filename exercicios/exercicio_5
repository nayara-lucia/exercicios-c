#include <stdio.h>

//  O usuário informa nome, nome da disciplina, nome do professor, e as 2 notas. O programa resulta as informações e a média
    

int main()
{
    char nome [50], disciplina [50], professor [50];
    float nota1, nota2, media;
  
  printf("Informe seu nome: \n");
  scanf("%s",&nome);
  
  printf("Informe o nome da disciplina: \n");
  scanf("%s",&disciplina);
  
  printf("Informe o nome do professor: \n");
  scanf("%s",&professor);
  
  printf("Informe sua nota da A1: \n");
  scanf("%f",&nota1);
  
  printf("Informe sua nota da A2: \n");
  scanf("%f",&nota2);
  
   media = ((nota1 + nota2) / 2);
   
   printf("Meu nome é: %s, estudo a disciplina de %s com o(a) professor(a) %s. Tirei as notas %2.1f e %2.1f com média: %4.1f",nome,disciplina,professor,nota1,nota2,media);
  
    return 0;
 
}