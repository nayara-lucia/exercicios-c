#include <stdio.h>

/* Faça um algoritmo que receba o ano de nascimento de uma
pessoa e o ano atual, calcule e mostre:
a) a idade dessa pessoa em anos;
b) a idade dessa pessoa em meses;
c) a idade dessa pessoa em dias;
d) a idade dessa pessoa em semanas.
e) a idade dessa pessoa em horas. */

#include <stdio.h>
int main()
{
    
int ano_nasc,ano_atual,qtde_anos,
qtde_meses,qtde_semanas,qtde_dias ,qtde_horas;

printf("Digite o seu ano de nascimento:");
scanf("%d",&ano_nasc);
printf("Digite o ano atual:");
scanf("%d",&ano_atual);

qtde_anos=ano_atual-ano_nasc;

qtde_meses=qtde_anos*12;

qtde_semanas=qtde_meses*4.5;

qtde_dias=qtde_semanas*7;

qtde_horas=qtde_dias*24;

printf("\nVocê tem %d anos de vida.",qtde_anos);
printf("\nVocê tem %d meses de vida.",qtde_meses);
printf("\nVocê tem %d semanas de vida.",qtde_semanas);
printf("\nVocê tem %d dias de vida.",qtde_dias);
printf("\nVocê tem %d horas de vida.",qtde_horas);

}